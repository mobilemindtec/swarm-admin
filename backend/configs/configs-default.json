{
	"templates": "./public/templates",
	"assets": "./public/assets",
	"server": {
		"port": 5151,
		"workers": 1
	},
	"authenticator": {
		"secret": "",
		"url": "https://authenticatorapi.com/"
	},
	"jwt" : {
		"secret": ""
	},
	"credentials": {
		"username": "test",
		"password": "test"
	},
	"docker": {
		"stack": {
			"path": "../swarm-stack-demo",
			"ext": "yml"
		},
		"logs": {
			"path": "/tmp"
		},	
		"aws": {
			"region": "",
			"ecr_id": ""
		}
	},
	"logger": {
		"docker": {
			"execute": "debug"
		}
	},
	"routes": {
		"/": {
			"handler": "index",
			"auth": false,
			"methods": ["get"]
		},		
		"/websocket": {
			"handler": "websocket",
			"auth": false,
			"methods": ["get"]
		},		
		"/app/login": {
			"handler": "index",
			"auth": false,
			"methods": ["get"]
		},			
		"/docker/*": {
			"handler": "index",
			"auth": false,
			"methods": ["get"]
		},		
		"/adm/*": {
			"handler": "index",
			"auth": false,
			"methods": ["get"]
		},		
		"/login": {
			"handler": "login",
			"auth": false,
			"methods": ["post"]
		},		
		"/api/docker/service/ls": {
				"handler": "docker_service_ls",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/service/ps/:id": {
				"handler": "docker_service_ps",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/service/rm/:service_name": {
				"handler": "docker_service_rm",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/service/update/:service_name": {
				"handler": "docker_service_update",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/service/logs/get/:service_name": {
				"handler": "docker_service_logs_get",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/node/ls": {
				"handler": "docker_node_ls",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/node/ps/:id": {
				"handler": "docker_node_ps",
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/api/docker/ps": {
				"handler": "docker_ps",		
				"before": ["auth_token"],
				"auth": true,
				"methods": ["get"]
		},
		"/ws": {
			"handler": "",
			"before": [],
			"auth": true,
			"methods": ["get"],
			"ws": true						
		}
	},
	"websocket":{
		"handler": "websocket_handler",
		"handler_msg": ""
	}
}